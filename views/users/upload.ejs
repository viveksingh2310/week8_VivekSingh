<!DOCTYPE html>
<html>
<head>
  <title>Uploaded Files</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h1 class="mb-4">Uploaded Files</h1>
  <% if (uploadedFiles.length === 0) { %>
    <p>No files uploaded yet.</p>
  <% } else { %>
    <% uploadedFiles.forEach(file => {
      const fileUrl = '/uploads/' + file;
      const ext = file.split('.').pop().toLowerCase();
    %>
      <div class="card mb-5">
        <div class="card-header d-flex justify-content-between align-items-center">
          <strong><%= file %></strong>
          <a href="<%= fileUrl %>" download class="btn btn-success btn-sm">Download</a>
        </div>
        <div class="card-body">
          <% if (ext === 'pdf') { %>
            <embed src="<%= fileUrl %>" type="application/pdf" width="100%" height="500px" />
          <% } else if (['jpg', 'jpeg', 'png', 'gif', 'webp'].includes(ext)) { %>
            <img src="<%= fileUrl %>" class="img-fluid" alt="Image" />
          <% } else if (['mp4', 'webm', 'ogg'].includes(ext)) { %>
            <video controls width="100%">
              <source src="<%= fileUrl %>" type="video/<%= ext %>">
              Your browser does not support the video tag.
            </video>
          <% } else if (['txt', 'log', 'md', 'csv'].includes(ext)) { %>
            <pre><code>
<% const fs = require('fs'); %>
<%= fs.readFileSync('public/uploads/' + file, 'utf8') %>
            </code></pre>
          <% } else { %>
            <p>This file type cannot be previewed. Use the button above to download it.</p>
          <% } %>
        </div>
      </div>
    <% }); %>
  <% } %>
  <a href="/" class="btn btn-primary mt-4">Back to Home</a>
</body>
</html>